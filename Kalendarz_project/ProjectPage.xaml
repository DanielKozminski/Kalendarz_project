<Page x:Class="Kalendarz_project.ProjectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kalendarz_project"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProjectPage">
    <Page.Resources>
        <Style x:Key="Grids" TargetType="Grid">
            
        </Style>
        <Style x:Key="Borders" TargetType="Border">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Style="{StaticResource Borders}" Margin="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0">
                        <Button Click="New_Project_Click">Dodaj Projekt</Button>
                    </StackPanel>
                    <ScrollViewer Grid.Row="1">
                <StackPanel x:Name="LeftPanel" Orientation="Vertical">
                        <Border Height="100" Style="{StaticResource Borders}" Margin="5">
                            <StackPanel Height="100" Orientation="Vertical">
                                <Label>
                                    Kalendarz
                                </Label>
                                <Label>
                                    Pomocnik, planer , kalendarz
                                </Label>
                                <Label>
                                    W toku
                                </Label>
                                <Button>Otwórz</Button>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
        <Border Grid.Column="1" Style="{StaticResource Borders}" Margin="0">
            <Grid>

            </Grid>
        </Border>
    </Grid>
</Page>
