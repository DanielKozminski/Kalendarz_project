<Window x:Class="Kalendarz_project.StatusChangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kalendarz_project"
        mc:Ignorable="d"
        Title="Zmiana statusu" Height="120" Width="360"
        ResizeMode="NoResize" WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Margin="80,20,80,20" TextAlignment="Center" FontSize="20">Wybierz Status</TextBlock>
            <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Click="Button_Finish_Click">Zakończony</Button>
            <Button Grid.Column="1" Click="Button_Paused_Click">Wstrzymany</Button>
            <Button Grid.Column="2" Click="Button_Active_Click">Wtrakcie</Button>
            <Button Grid.Column="3" Click="Button_Cancel_Click">Annuluj</Button>
        </Grid>
    </Grid>
</Window>
